import java.util.*;

class Solution {
    public ArrayList solution(int[] numbers) {
        
        // 1. for문 활용
        /*int[] answer = {};
        answer = new int[numbers.length];
        
        for(int i=0; i<numbers.length; i++){
            answer[i] = numbers[i]*2;
        }*/
        
        // 2. stream 사용
        ArrayList<Integer> answer = new ArrayList<>();
        
        for(int num:numbers){
            answer.add(num*2);
        }
        
        return answer;
    }
}
